[colors]
background = #2a2426
background-alt = #659e9d
foreground = #659e9d
color8 = #d4d4d8

[bar/bar]

override-redirect = false 
wm-restack = bspwm
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true
width = 100%
height = 26
radius = 0.0
line-size = 0
line-color = #f00
offset-y = 0
offset-x = 0

font-0 = Pragmata Pro Mono:style=Bold:pixelsize=10;3

modules-left = ncspot network
modules-center = bspwm
modules-right = alsa battery time

[module/rofi]
type = custom/text
content = MENU
click-left = rofi -show drun -location 1 -xoffset 39 -yoffset 73
click-right = rofi -show window -location 1 -xoffset 39 -yoffset 73
enable-click = true
content-foreground = #a09f69
content-padding = 2

[module/bspwm]
type = internal/bspwm
index-sort = true
enable-click = true
format = <label-state>
foramt-prefix-padding = 2
pin-workspaces = true

label-empty-foreground = #7f7c7d
label-focused-foreground = #1c1c24
label-focused-background = ${colors.background-alt} 
label-focused = %name%
label-focused-padding = 2
label-occupied = %name%
label-occupied-padding = 2
label-occupied-foreground = #e6d6ac
label-empty = %name%
label-empty-padding = 2

[settings]
label-focused-underline= ${colors.foreground}
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true
pseudo-transparency = false

[module/ncspot]
type = custom/script
exec = playerctl -p ncspot metadata --format '{{artist}} - {{title}}'
exec-if = "pgrep ncspot"
format-foreground =  #e6d6ac
format-padding = 1
format-prefix = MUSIC:
format-prefix-padding = 1
format-prefix-foreground = #87af87
tail = false
interval = 3

[module/time]
type = internal/date
time = %H:%M | %d/%m/%y
format = <label>
format-prefix = TIME:
format-prefix-padding = 1
format-foreground = #659e9d
format-padding = 2
label = %time%
label-foreground = #dccda5

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98%

format-charging = BAT: <label-charging>
format-discharging = BAT: <label-discharging>
format-full = BAT: <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%

label-charging-foreground = #e6d6ac
label-discharging-foreground = #e6d6ac
label-full-foreground = #e6d6ac

format-charging-foreground = #87af87
format-discharging-foreground = #659e9d
format-full-foreground = #87af87

format-charging-padding = 2
format-discharging-padding = 2
format-full-padding = 2

[module/network]
type = internal/network
interface = wlp0s20f0u3
interval = 3.0
unknown-as-up = true
accumulate-stats = true

format-connected = WIFI: <label-connected>
label-connected = %essid%
format-connected-padding = 2
format-connected-foreground = #659e9d
label-connected-foreground = ${colors.color8}

[module/alsa]
type = internal/alsa

format-volume = VOL: <label-volume>
label-muted = muted
label-muted-padding = 2
label-volume-foreground = #e6d6ac
format-volume-foreground = #659e9d
format-volume-padding = 2

